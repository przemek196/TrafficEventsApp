<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:map="http://schemas.android.com/tools">


    <fragment
        android:id="@+id/maps"
        class="com.google.android.gms.maps.SupportMapFragment"
        map:mapType="normal"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include
        layout="@layout/marker_info_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="15dp"/>

    <!-- pozostała część głównego layoutu -->


    <FrameLayout
        android:id="@+id/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0F1313"
        android:visibility="visible"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/loading_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/waitforloc"
                android:textSize="20sp" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/loading_text"
                android:layout_centerHorizontal="true" />
        </LinearLayout>
    </FrameLayout>


    <ImageButton
        android:id="@+id/btnDisplayDirection"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:layout_margin="15dp"
        android:background="@drawable/displayloc_icon"
        android:padding="8dp" />


    <ImageButton
        android:id="@+id/menu_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:background="@drawable/ic_menu"
        android:padding="16dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/linear_layout_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">


            <ImageButton
                android:id="@+id/btn_speed_control_maker"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/speed_cntrl_ic"></ImageButton>

            <ImageButton
                android:id="@+id/btn_traffic_accident_maker"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/car_cc_ic"></ImageButton>

            <ImageButton
                android:id="@+id/btn_police_voituer_maker"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/pol_car_ic"></ImageButton>
        </LinearLayout>

        <View
            android:id="@+id/bottom_sheet"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="#ffffff"
            android:elevation="4dp"
            android:visibility="gone" />


        <ImageButton
            android:id="@+id/buttonAddMaker"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/add_ic"></ImageButton>

    </LinearLayout>
</RelativeLayout>

